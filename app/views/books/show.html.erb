<div class="container">
  <div class="row">
    <div class="header">
      <h1 class="text-center"><%= @book.name %></h1>
      <h2 class="text-center"><em><%= @book.author %></em></h2>
    </div>
    <%= link_to books_path, class:'back' do %> <h2>< Go back</h2> <% end %>
    <div class="col-md-4 col-sm-12 col-md-offset-1">
      <img class="book-image img-responsive" src="<%= @book.image %>" alt="">
    </div>
    <div class="col-md-6 col-sm-12">
      <% if @book.reviews.length > 1 %>
        <h3><%= @book.reviews[0].tagline %></h3>
        <p> <%= @book.reviews[1].review %> </p>
      <% end %>
      <h3>Key Take Aways</h3>
        <ul>
          <li>point 1</li>
          <li>point 2</li>
          <li>point 3</li>
          <li>point 4</li>
        </ul>
        <h3>Overall rating</h3>
        <% if @book.reviews.length > 1 %>
          <% @book.reviews[0].rating.times do  %>
        <% end %>
          <i class="fa fa-star fa-lg"></i>
        <% end %>
    </div>
  </div>
</div>
