<%= render "layouts/errors", :object => @book %>

<div class="col-sm-6">
  <%= form_for @book do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', required: true%>
    </div>
    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control', required: true%>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image, class: 'form-control'%>
    </div>
    <%= f.submit class:'button'%>
  <% end %>
</div>
